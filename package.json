{
  "name": "aspen",
  "version": "0.0.1",
  "description": "Private search engine for historical documents",
  "repository": "git@github.com:statico/aspen.git",
  "private": true,
  "scripts": {
    "web-dev": "nodemon -e coffee -x coffee -w app.coffee app.coffee",
    "es-dev": "./elasticsearch-dist/bin/elasticsearch --config=elasticsearch.yml",
    "web-prod": "NODE_ENV=production coffee app.coffee",
    "es-prod": "JAVA_OPTS='-Xms300m -Xmx600m -server' ./elasticsearch-dist/bin/elasticsearch --config=elasticsearch.yml",
    "syncup": "rsync -azv -e ssh --delete --progress static/data/ lemon:wsc/data/",
    "syncdown": "rsync -azv -e ssh --delete --progress lemon:wsc/data/ static/data/"
  },
  "author": "Ian Langworth",
  "license": "MIT",
  "engines": {
    "node": ">=0.10"
  },
  "dependencies": {
    "async": "^0.9.0",
    "body-parser": "^1.6.2",
    "browserify": "^5.9.1",
    "coffee-middleware": "^0.2.1",
    "coffee-script": "^1.7.1",
    "colors": "^1.0.3",
    "commander": "^2.5.0",
    "express": "^4.8.2",
    "forever": "^0.11.1",
    "jade": "^1.5.0",
    "less-middleware": "^1.0.3",
    "line-reader": "^0.2.4",
    "morgan": "^1.2.2",
    "nodemon": "^1.2.1",
    "request": "^2.40.0",
    "serve-index": "^1.1.6",
    "walk": "^2.3.3"
  }
}
